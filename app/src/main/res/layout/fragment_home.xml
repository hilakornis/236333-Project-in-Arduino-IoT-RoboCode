<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/homeFragment_doLoadLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <ProgressBar

                                    android:id="@+id/loadTasksProgressBar"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center" />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/homeFragment_finishLoadLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="20dp" >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="hello, "
                                            android:textSize="20dp"/>
                                        <TextView
                                            android:id="@+id/homeFragment_userIdTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="____"
                                            android:textSize="20dp"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:textStyle="bold"
                                    android:text="Welcome to the world of RoboCode!"
                                    android:textSize="30dp"/>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp" >

                                        <ImageView

                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            app:srcCompat="@drawable/ic_rss_feed_black_20dp" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="News Feed"
                                            android:textStyle="italic"
                                            android:textSize="20dp"/>
                                </LinearLayout>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp">

                                        <ScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_margin="7dp"
                                                    android:orientation="vertical">
                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="2/8/2020"
                                                            android:textStyle="bold" />

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Its final presentation day!" />


                                                        <TextView
                                                            android:layout_marginTop="20dp"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="26/5/2020"
                                                            android:textStyle="bold" />

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Its peer demo day!" />


                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="20/4/2020"
                                                            android:layout_marginTop="20dp"
                                                            android:textStyle="bold" />

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Check out the new tasks available now under the 'Tasks' tab." />

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="20dp"
                                                            android:text="20/4/2020"
                                                            android:textStyle="bold" />

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="The demo version of RoboCode is on!" />

                                                </LinearLayout>
                                        </ScrollView>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp" >

                                        <ImageView

                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            app:srcCompat="@drawable/ic_menu_slideshow" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Robot Controls For Demo"
                                            android:textStyle="italic"
                                            android:textSize="20dp"/>
                                </LinearLayout>
                                <!--LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="here will have the status text"
                                            android:id="@+id/homeFragment_bluetoothStatus"
                                            />
                                </LinearLayout-->
                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:text="stand-alone mode on"
                                    android:layout_gravity="center"
                                    android:id="@+id/homeFragment_cloud_btn"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center"
                                    >
                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="5dp"
                                            android:text="⇦"
                                            android:layout_gravity="center"
                                            android:id="@+id/homeFragment_bluetoothLeft_NS"
                                            />
                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="5dp"
                                            android:text="⇧"
                                            android:layout_gravity="center"
                                            android:id="@+id/homeFragment_bluetoothForwards_NS"
                                            />
                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="5dp"
                                            android:text="⇩"
                                            android:layout_gravity="center"
                                            android:id="@+id/homeFragment_bluetoothBackwards_NS"
                                            />
                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="5dp"
                                            android:text="⇨"
                                            android:layout_gravity="center"
                                            android:id="@+id/homeFragment_bluetoothRight_NS"
                                            />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center"
                                    >
                                    <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="5dp"
                                            android:text="T"
                                            android:layout_gravity="center"
                                            android:id="@+id/homeFragment_runTest"
                                            />
                                        <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:text="U"
                                    android:layout_gravity="center"
                                    android:id="@+id/homeFragment_bluetoothUTurn_NS"
                                    />
                                <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:text="↥"
                                    android:layout_gravity="center"
                                    android:id="@+id/homeFragment_bluetoothLiftUp_NS"
                                    />
                                <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:text="↧"
                                    android:layout_gravity="center"
                                    android:id="@+id/homeFragment_bluetoothLiftDown_NS"
                                    />
                                </LinearLayout>

                        </LinearLayout>
                </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>